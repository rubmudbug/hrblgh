<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
   >

    <TextView
        android:id="@+id/BaseUI_title"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:gravity="center"
        android:text="よしのん"
        android:textSize="20dp"
        android:background="@drawable/ic_title"/>

   <!-- <View
        android:layout_width="match_parent"
        android:layout_height="2dip"
        android:background="#FF909090"
        android:layout_gravity="center"
        android:layout_alignParentBottom="@+id/BaseUI_Title"/>
-->
    <ImageView
        android:id="@+id/BaseUI_background"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/raw_ground"
        android:layout_below="@+id/BaseUI_title"
        android:layout_above="@id/BaseUI_BottomLine"
        android:scaleType="center"
        android:background="#e0000000"
        />
    <ImageButton
        android:id="@+id/BaseUI_MessageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#fff"
        android:src="@drawable/ic_message"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="30dp" />

    <ImageButton
        android:id="@+id/BaseUI_ContactsButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="#fff"
        android:src="@drawable/ic_contacts"/>

    <ImageButton
        android:id="@+id/BaseUI_SettingButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="30dp"
        android:background="#fff"
        android:src="@drawable/ic_setting"
        android:layout_alignParentBottom="true"
        android:layout_alignParentEnd="true" />

    <view
        android:id="@+id/BaseUI_BottomLine"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:background="#FF909090"
        android:layout_gravity="center"
        android:layout_above="@+id/BaseUI_SettingButton"/>

</android.support.percent.PercentRelativeLayout>
